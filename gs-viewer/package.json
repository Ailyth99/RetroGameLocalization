{
  "name": "gs-viewer",
  "version": "1.0.0",
  "description": "A GS file viewer application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourapp.gsviewer",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  }
}
